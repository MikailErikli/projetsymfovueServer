{% extends 'layouts/base.html.twig' %}

{% block body %}
    {%  if pins|length > 0 %}
<h1 class="text-center">Panterest</h1>

       {% set pins_count = pins|length %}
<h1 class="text-center text-muted">{{ pins_count }} Pins</h1>




<br />
<br />

        {% for row in pins|batch(3) %}
            <div class="container">
            <div class="row mb-5">z
                {% for pin in row %}

                    <div class="col-md-4">
                        <article class="pin bg-white rounded shadow" style="width: 400px;">

                <a href ="{{ path('app_pins_show', {'id': pin.id}) }}">
                    <div class="zoom">   <img src="{{ vich_uploader_asset(pin) }}" alt="{{ pin.title }}"   style="
                background: black;
                padding: 1px;
                border-top-left-radius: 5px 5px;
                 border-top-right-radius: 5px 5px;
                width: 100%;
                height: 360px;
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"/> </div>
                <center> <h2 class="h5  pt-3"><a href ="{{ path('app_pins_show', {'id': pin.id}) }}" class="  text-muted" style="text-decoration: none;"> {{ pin.title()}} </h2></a>


                            <p class="pl-3 pb-3 text-muted">Submitted by {{ pin.user.fullName }}  {{ pin.createdAt|ago }} </p></center>


                        </article>
                    </div>
                    {% endfor %}
                    </div>
            </div>
<style>.zoom {


        transition: transform .2s; /* Animation */

        margin: 0 auto;
    }

    .zoom:hover {
        transform: scale(1.02); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
    }</style>

 {%else %}
    <p>Sorry, no pins yet!</p>
{% endfor %}
{% else %}
        <p class =" h1 text-center">No pins yet. <a href="{{ path('app_pins_create') }}">Be the first!</a></p>
{% endif %}
</body>

{% endblock %}